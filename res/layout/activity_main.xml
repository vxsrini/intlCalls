<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#031614"
    android:focusable="true"
    android:focusableInTouchMode="true" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.intlcall.MainActivity" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:background="@layout/backwithborder"
        android:layout_marginLeft="5dp"
        android:hint="@string/search_contact"
        android:paddingLeft= "5dp"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:ems="10"
        android:inputType="text">
    </EditText>
     <EditText
        android:id="@+id/raw_tn"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@layout/backwithborder"
        android:hint="@string/enter_tn"
        android:paddingLeft= "5dp"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/editText1"
        android:ems="10"
        android:inputType="phone">
    </EditText>
    <Button
        android:id="@+id/call_tn"
        android:layout_width="50dp"
        android:layout_toRightOf="@+id/raw_tn"
        android:layout_below="@+id/editText1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Call"
        android:textColor="#000000"
        android:layout_height="30dp"
        android:background="#9e6f93"/>
    <ListView 
	    android:id="@+id/contactList"
		android:background="#ffffff"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/raw_tn"
	    android:layout_marginTop="15dip"
    />    
</RelativeLayout>